@model IEnumerable<GNIBIRPAndVisaAppointment.Web.Models.ContactModel>

<form method="POST">
@foreach (var contact in Model)
{
    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox">
        <label class="form-check-label">@contact.Contact</label>
    </div>
    <div class="form-group">
        <input class="form-control" type="text" disable value="@contact.Title">
    </div>
    <div class="form-group">
        @if (contact.IsHtml)
        {
            <textarea class="html-content form-control" style="height: 400px">@contact.Content</textarea>
        }
        else
        {
            <textarea class="form-control" style="height: 400px">@contact.Content</textarea>
        }
    </div>
    <hr>
}
</form>

@section Scripts
{
    <script type="text/javascript" src="/lib/ckeditor/ckeditor.js"></script>
    <script>
        $('.html-content').each(function () {
            CKEDITOR.replace(this, {
                filebrowserBrowseUrl: '/Admin/Browse',
                filebrowserUploadUrl: '/Admin/Upload'
            });
        });
    </script>
}