@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('select').each(function () {
                if ($(this).attr('value')) {
                    $(this).val($(this).attr('value'));
                }
            });
            $('button[type="submit"]').prop('disabled', !$('input[name="AuthorizeContact"]').checked);
            $('input[name="AuthorizeContact"]').change(function () {
                $('button[type="submit"]').prop('disabled', !this.checked);
            });
        });
    </script>
}