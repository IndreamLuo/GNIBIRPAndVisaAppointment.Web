@{
    ViewData["Title"] += "GNIB/IRP And Visa Appointment";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Head", required: false)
</head>
<body>
    <script src="~/lib/facebook.sdk.js"></script>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-light">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
            <img src="/favicon.ico" style="height:25px" />
            GNIB/IRP And Visa Appointment
        </a>

        <div class="navbar-collapse collapse">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="App" asp-action="Index">App</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Info" asp-action="About" asp-route-id="GNIB/IRP">GNIB/IRP</a></li>
            </ul>
        </div>

        <div class="my-lg-0">
            <fb:login-button scope="public_profile,email" onlogin="checkLoginState();"></fb:login-button>
        
            <button type="button" class="navbar-toggler my-lg-0" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="float-left">
        @RenderSection("Left", required: false)
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <p>&copy; GNIB/IRP and Visa Appointment by Indream Luo (indreamluo@@qq.com).</p>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.slim.js"></script>
    <script src="~/lib/popper.js/dist/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
