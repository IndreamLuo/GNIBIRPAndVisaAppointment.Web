@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Remove Configuration</h2>

<form>
    <input type="hidden" id="Remove" name="Remove" value="true" />
    <div class="form-group">
        <label for="Area">Area</label>
        <input class="form-control" id="Area" name="Area" type="text" value="@ViewBag.Area" disabled />
    </div>
    <div class="form-group">
        <label for="Key">Key</label>
        <input class="form-control" id="Key" name="Key" type="text" value="@ViewBag.Key" disabled />
    </div>
    <div class="form-group">
        <label for="Value">Value</label>
        <input class="form-control" id="Value" name="Value" type="text" value="@ViewBag.Value" disabled />
    </div>
    <button class="btn btn-danger" type="submit">Remove</button>
</form>